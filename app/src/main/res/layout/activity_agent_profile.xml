<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secret"
    android:orientation="horizontal"
    tools:context=".profile.AgentProfileActivity">

    <ImageButton
        android:id="@+id/changeAvatarImageButton"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:src="@drawable/face1"
        android:layout_width="135dp"
        android:layout_height="135dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/currentAgentName"
            android:text="@string/Default"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/setAvatarImageButton"/>
        <Button
            android:id="@+id/setAvatarImageButton"
            android:text="@string/Set_Avatar"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/requestForLocation"
            android:text="@string/Find"
            android:textColor="@color/colorRed"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setAvatarImageButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>



